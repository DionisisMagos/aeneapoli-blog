{
  "functions": {
    "api/wsgi.py": { "runtime": "python3.12" }
  },
  "routes": [
    { "src": "/static/(.*)", "dest": "/static/$1" },
    { "src": "/staticfiles/(.*)", "dest": "/staticfiles/$1" },
    { "src": "/(.*)", "dest": "api/wsgi.py" }
  ],
  "buildCommand": "python -m pip install -r requirements.txt && python manage.py collectstatic --noinput"
}
